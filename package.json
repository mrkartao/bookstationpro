{
  "name": "book-station-pro",
  "version": "1.0.0",
  "description": "Store Management Desktop Application - POS, Inventory, Accounting",
  "main": "dist-electron/main.js",
  "author": "Book Station Pro",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:win32": "tsc && vite build && electron-builder --win --ia32",
    "build:win64": "tsc && vite build && electron-builder --win --x64",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "db:migrate": "tsx database/migrate.ts",
    "license:generate-keys": "tsx license/generate-keys.ts",
    "license:sign": "tsx license/sign-license.ts",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7",
    "i18next": "^23.7.6",
    "react-i18next": "^13.5.0",
    "better-sqlite3": "^9.2.2",
    "drizzle-orm": "^0.29.1",
    "bcryptjs": "^2.4.3",
    "node-rsa": "^1.1.1",
    "node-machine-id": "^1.1.12",
    "uuid": "^9.0.1",
    "dayjs": "^1.11.10",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.1",
    "xlsx": "^0.18.5",
    "electron-pos-printer": "^1.3.6",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "lodash": "^4.17.21",
    "zod": "^3.22.4",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.7",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.0.4"
  },
  "build": {
    "appId": "com.bookstationpro.app",
    "productName": "Book Station Pro",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public/public-key.pem",
        "to": "public-key.pem"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Book Station Pro",
      "uninstallDisplayName": "Book Station Pro"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  }
}
