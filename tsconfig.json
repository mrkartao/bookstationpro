{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@database/*": [
                "database/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "src",
        "electron",
        "shared",
        "database"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}